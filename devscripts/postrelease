#! /bin/sh

tag="`python setup.py --version`" &&

. `dirname $0`/split.sh &&
split_tag $tag

if [ $micro -eq 0 -a $state = final ]; then
   git checkout master &&
   git merge --strategy=ours maint
fi &&

git checkout HEAD~ ANNOUNCE.rst &&

`git var GIT_EDITOR` ANNOUNCE.rst www/news.rst Cheetah/Version.py README.rst setup.cfg SetupConfig.py &&
exec git commit --message="Prepare for the next release" ANNOUNCE.rst www/news.rst Cheetah/Version.py README.rst setup.cfg SetupConfig.py
